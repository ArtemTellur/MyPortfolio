@model WebUI.ViewModels.UserViews.UserLoginVM
@{
    ViewBag.Title = "Авторизация";
}

@section StyleAuthorizationPage {   
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/StyleAuthorizationPage.css" rel="stylesheet" />
}
<div class="container-fluid self-container">

    <header class="row logo">
        <img src="~/Content/images/logo.png" class="pull-left logo-img" />        
            @Html.ActionLink("Вернуться на главную страницу", "Index", "Home", null,new { @class = "link-login pull-right" })

    </header>

    <div class="row container-login">
        <div class="col-xs-12">
                <h1 class="authorization text-center">Авторизация</h1>
            <div class="row container-form">
                    <div class="col-xs-12">
                        @using (Html.BeginForm(new { @class = "form-center" }))
            {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-xs-2 col-xs-offset-5 form-group">
                                    <h2 class="text-center">E-mail</h2>                                 
                                    <div class="col-xs-12">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-login" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "block-login" })

                                    </div>
                                </div>
                                <div class="col-xs-2 col-xs-offset-5 form-group">
                                    <h2 class="text-center">Пароль</h2>
                                    
                                    <div class="col-xs-12">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control input-login" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "block-login" })
                                    </div>
                                </div>
                                <div class="col-xs-2 col-xs-offset-5">
                                    <div class="form-group">
                                        <input type="submit" value="Войти" class="btn btn-default button btn-login" />
                                    </div>
                                </div>
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>
    @*<div class="indent">
        @Html.ActionLink("Go back to main page", "Index", "Home")
    </div>*@
</div>